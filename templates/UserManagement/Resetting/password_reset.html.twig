{% extends 'base.html.twig' %}

{% block title %}
	{{'user.password.title'|trans}}
{% endblock %}

{% block body %}
    {{ include('UserManagement/_header.html.twig') }}
	<div class="container">
        <center><figure style="width: 10rem;"><img src="{{asset('images/core/logo_square.svg')}}" class="cm-logo-img" alt="logo"/></figure></center>
		<div class="row align-items-center justify-content-center">
            <section class="cm-login-form">
                <header>
                    <h2 class="font-weight-light">{{ 'global.welcom.resseting_titel'|trans }}</h2>
                </header>
                {{ include('UserManagement/_flash.html.twig') }}
                <div class="jumbotron">

                    {% form_theme form 'bootstrap_4_layout.html.twig' %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <div class="row justify-content-between">
                        <div class="col-6 text-center">
                            <button type="submit" class="btn btn-primary">
                                {{ 'global.welcom.reseting_subit'|trans }}
                            </button>
                        </div>
                        <div class="col-6 d-flex text-center"><a href="{{ path('app_login') }}" class="align-self-center">{{ 'security.login.return'|trans }}</a></div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </section>
		</div>
	</div>
{% for flashMessage in app.session.flashbag.get('success') %}
    <input type="hidden" class="flashbagSuccess" value="{{ flashMessage }}">   
{% endfor %}  
{% endblock %}

{% block footer %}
    {{ include('home/footer.html.twig', {'class': 'fixed-bottom'}) }}
{% endblock %}

{% block js %}
    {{ encore_entry_script_tags('js/password-reset') }}                 
{% endblock %}