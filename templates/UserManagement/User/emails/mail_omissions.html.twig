{% extends 'mail_layout_omissions.html.twig' %}

{% block mail %}
    <tr mc:hideable >
        <td align="center" valign="top">
            <!-- CENTERING TABLE // -->
            <table border="0" cellpadding="0" cellspacing="0" width="100%" bgcolor="#eeeeee">
                <tr>
                    <td align="center" valign="top">
                        <!-- FLEXIBLE CONTAINER // -->
                        <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                            <tr>
                                <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                    <table border="0" cellpadding="30" cellspacing="0" width="100%">
                                        <tr>
                                            <td align="center" valign="top">
                                                <!-- CONTENT TABLE // -->
                                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                                    <tr>
                                                        <td valign="top" class="textContent">
                                                            <div mc:edit="body" style="text-align:left;font-family:Helvetica,Arial,sans-serif;font-size:15px;margin-bottom:0;color:#5F5F5F;line-height:135%;">
                                                                <br/><b>{{ 'user.mail.layout.bonjour'|trans }} {{ user.civility }} {{ user.firstname }} {{ user.lastname }} </b>
                                                                <br/><br/>
                                                                <p>{{ 'user.mail.omission.intro'|trans }} </p>
                                                                {% if omissions['inclusion']|length > 0 %}
                                                                    <p>{{ 'user.mail.omission.inclusion'|trans({'%nb%': omissions['inclusion']|length}) }} </p>
                                                                {% endif %}
                                                                {% if omissions['administration']|length > 0 %}
                                                                    <p>{{ 'user.mail.omission.administration'|trans({'%nb%': omissions['administration']|length}) }} </p>
                                                                    <ul>
                                                                        {% for omission in omissions['administration'] %}
                                                                            <li>{{ 'user.mail.omission.detail'|trans({'%numATU%': omission.numAtuCohorte}) }}</li>
                                                                        {% endfor %}
                                                                    </ul>
                                                                {% endif %}
                                                                {% if omissions['suivi7']|length > 0 %}
                                                                    <p>{{ 'user.mail.omission.suivi7'|trans({'%nb%': omissions['suivi7']|length}) }} </p>
                                                                    <ul>
                                                                        {% for omission in omissions['suivi7'] %}
                                                                            <li>{{ 'user.mail.omission.detail'|trans({'%numATU%': omission.numAtuCohorte}) }}</li>
                                                                        {% endfor %}
                                                                    </ul>
                                                                {% endif %}
                                                                {% if omissions['suivi30']|length > 0 %}
                                                                    <p>{{ 'user.mail.omission.suivi30'|trans({'%nb%': omissions['suivi30']|length}) }} </p>
                                                                    <ul>
                                                                        {% for omission in omissions['suivi30'] %}
                                                                            <li>{{ 'user.mail.omission.detail'|trans({'%numATU%': omission.numAtuCohorte}) }}</li>
                                                                        {% endfor %}
                                                                    </ul>
                                                                {% endif %}
                                                            </div>
                                                        </td>
                                                    </tr>

                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <!-- // FLEXIBLE CONTAINER -->
                    </td>
                </tr>
            </table>
            <!-- // CENTERING TABLE -->
        </td>
    </tr>
    <!-- // MODULE ROW -->
{% endblock %}